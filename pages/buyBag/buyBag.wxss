.page {
  background-color: #fff;
}
.bag {
  width: 100%;
  text-align: center;
}
.bag image {
  width: 100%;
}
.bag-name {
  font-size: 38rpx;
  color: #1A1A1A;
  margin-top: 40rpx;
  line-height: 40rpx;
  text-indent: 34rpx;
}
.bag-p {
  font-size: 26rpx;
  color: #999;
  line-height: 40rpx;
  text-indent: 34rpx;
  margin-top: 10rpx;
}
.money-wrap {
  margin-top: 22rpx;
}
.money {
  color: #3AA5FF;
  font-size: 30rpx;
  text-indent: 34rpx;
  width: 50%;
}
.money text {
  font-size: 56rpx;
}
.number {
  width: 50%;
  font-size: 26rpx;
  color: #CCCCCC;
}
.number input {
  float: left;
  width: 110rpx;
  height: 52rpx;
  background-color: #F2F2F2;
  text-align: center;
  color: #000;
  padding: 0;
}
.number view {
  float: left;
  height: 52rpx;
}
.count {
  width: 60rpx;
  box-sizing: border-box;
  padding-top: 13rpx;
}
.rdu, .add {
  width: 80rpx;
  text-align: center;
  font-size: 40rpx;
  color: #1A1A1A;
}
/* 收货地址 */
.address {
  margin: 40rpx 34rpx 0;
  background-color: rgb(251, 251, 251);
  height: 160rpx;
  display: flex;
  align-items: center;
}
.address image {
  width: 30rpx;
  margin: 0 25rpx;
}
.address view { 
  display: inline-block;
  width: 80%;
  font-size: 34rpx;
  color: #4D4D4D;
}
.address text {
  font-size: 40rpx;
  float: right;
  margin-right: 0;
}
.btn {
  width: 640rpx;
  margin: 120rpx auto 0;
}
.btn button {
  border-radius: 8rpx;
  background-color: #3AA5FF;
  color: #fff;
}


/* 选择地址后 */
.add1{
  background: #fafafa;
  width: 686rpx;
  height: 200rpx;
  margin: auto;
  box-sizing: border-box;
  padding: 26rpx 45rpx 50rpx 92rpx;
  position: relative;
  margin-bottom: 40rpx;
  margin-top: 40rpx;
}
.add1>cover-image{
  position: absolute;
  top: 88rpx;
  left: 34rpx
}
.fl1>text{
  font-size: 40rpx;
  float: right;
  margin-right: 0;
}
.fl2{
  font-weight: 600;
  font-size: 34rpx;
  color: #1A1A1A;
  margin-top: 35rpx
}
.fl3{
  font-weight: 600; 
  font-size: 34rpx;
  color: #1A1A1A;
  margin-top: 14rpx
}
.fl2>text:nth-child(2){
  font-size: 30rpx; 
  padding-left: 68rpx
}
.fl2 .fa{
  font-size: 40rpx
}
.adds {
  margin-top: 20rpx;
}
.name {
  display: inline-block;
  width: 200rpx;
  font-size: 34rpx;
}
.mobile{
  font-size: 30rpx;
}

