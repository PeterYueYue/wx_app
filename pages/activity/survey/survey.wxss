.page {
  width: 100%;
  min-height: 100vh;
  background: #ffffff;
  box-sizing: border-box;
  padding: 0 40rpx 50rpx;
}
.send {
  font-size: 28rpx;
  line-height: 40rpx;
}
.radio {
  width: 100%;
}
.radio radio {
  vertical-align: middle;
  margin-right: 20rpx;
}
.list {
  margin-top: 40rpx;
  font-size: 32rpx;
}
.question {
  margin-bottom: 10rpx;
  font-weight: 600;
}
.reason {
  width: 100%;
  height: 70rpx;
  border: 1rpx solid #aaa;
  border-radius: 8rpx;
  margin-top: 20rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.radio-group{
  display: flex;
  flex-direction: column;
}
.radio-group .radio{
  margin-top: 20rpx;
}
button{
  margin-top: 100rpx;
}