.page{
  width: 100%;
  height: 100vh;
  background: #f9f9f9
}
.site{
  width: 100%;
  height: 280rpx;
  background: #ffffff;
  box-sizing: border-box;
  padding: 42rpx 68rpx 36rpx 84rpx;
  margin-bottom: 20rpx;
  position: relative
}
.siteGray{
  opacity: 0.5
}
.place{
  font-size: 34rpx;
  color: #1A1A1A;
}
.place>text:first-child{
  display: inline-block;
  width: 470rpx
}
.place>text:nth-child(2){
  float: right;
  font-size: 30rpx;
  color: #3AA5FF;
}
.time{
  font-size: 26rpx;
  color: #808080;
  margin-top: 24rpx
}
.name{
  font-size: 26rpx;
  color: #808080;
  margin-top: 10rpx
}
.name>text:nth-child(2){
  padding-left: 26rpx
}
.type{
  display: inline-block;
  margin-top: 30rpx;
  border-radius: 20rpx;
  color: #9fde5f;
  padding: 5rpx 8rpx;
  font-size: 24rpx;
  border: 1rpx solid #9fde5f
}
.right{
  position: absolute;
  top: 128rpx;
  right: 36rpx
}
.right1{
  position: absolute;
  top: 149.4rpx;
  right: 80.8rpx;
  width: 122rpx;
  height: 102rpx;
}
.left{
  position: absolute;
  top: 38rpx;
  left: 38.4rpx
}