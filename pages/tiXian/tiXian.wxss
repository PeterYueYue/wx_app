page {
  /* background-color: #fff; */
  background-color: #f5f5f5;
}

.page {
  height: 160rpx;
  border-bottom: 1rpx solid #EDEDED;
  position: relative;
}

.img {
  position: absolute;
  width: 44rpx;
  top: 58rpx;
  left: 36rpx;
}

.money {
  position: absolute;
  font-size: 30rpx;
  color: #1A1A1A;
  top: 38rpx;
  left: 120rpx;
  font-weight: 600;
}

.moneyNum {
  margin-left: 40rpx;
}

.time {
  font-size: 26rpx;
  color: #B3B3B3;
  top: 90rpx;
  left: 120rpx;
  position: absolute;
}

.state {
  font-size: 28rpx;
  color: #1A1A1A;
  text-align: right;
  position: absolute;
  top: 60rpx;
  right: 34rpx;
}

.audit {
  color: #3AA5FF;
}

.red {
  color: red;
}

.hint {
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  background-color: #ffffff;
}

.hint>image {
  width: 108rpx;
  margin-bottom: 10rpx;
}

.order {
  background: #ffffff;
  margin-bottom: 28rpx;
  width: 710rpx;
  margin-left: 20rpx;
  /* height: 214rpx; */
  box-sizing: border-box;
  padding: 15rpx 28rpx 35rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
  /* font-weight: 600; */
}

.order>view {
  margin-top: 20rpx;
}

.line {
  width: 637rpx;
  height: 1rpx;
  background-color: #e5e5e5;
  margin: auto;
}

.order_box {
  padding-top: 20rpx;
  box-sizing: border-box;
  height: 100vh;
}