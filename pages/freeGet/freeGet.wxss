.page {
  background-color: #fff;
  height: 100vh;
}

.bag {
  width: 100%;
  text-align: center;
}

.bag image {
  width: 100%;
}

/* 收货地址 */

.address {
  margin: 20rpx 34rpx 0;
  background-color: rgb(251, 251, 251);
  height: 160rpx;
  display: flex;
  align-items: center;
}

.address image {
  width: 30rpx;
  margin: 0 25rpx;
}

.address view {
  line-height: 160rpx;
  display: inline-block;
  width: 80%;
  font-size: 34rpx;
  color: #4D4D4D;
}

.address text {
  font-size: 40rpx;
  float: right;
  margin-right: 0;
}

.get {
  width: 640rpx;
  margin: 30rpx auto 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.get view, .get button {
  color: #fff;
  border-radius: 8rpx;
  width: 300rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 34rpx;
}

.active1 {
  /* background-color: #9AE04F; */
  background-color: #ccc;
}

.active2 {
  background-color: #3AA5FF;
}

.unactive {
  background-color: #ccc;
}

/* 选择地址后 */

.add1 {
  background: #fafafa;
  width: 686rpx;
  height: 200rpx;
  margin: auto;
  box-sizing: border-box;
  padding: 26rpx 45rpx 50rpx 92rpx;
  position: relative;
  margin-bottom: 20rpx;
  margin-top: 40rpx;
}

.add1>cover-image {
  position: absolute;
  top: 88rpx;
  left: 34rpx
}

.fl1>text {
  font-size: 40rpx;
  float: right;
  margin-right: 0;
}

.fl2 {
  font-weight: 600;
  font-size: 34rpx;
  color: #1A1A1A;
  margin-top: 35rpx
}

.fl3 {
  font-weight: 600;
  font-size: 34rpx;
  color: #1A1A1A;
  margin-top: 14rpx
}

.fl2>text:nth-child(2) {
  font-size: 30rpx;
  padding-left: 68rpx
}

.fl2 .fa {
  font-size: 40rpx
}

.adds {
  margin-top: 20rpx;
}

.name {
  width: 200rpx;
  font-size: 34rpx;
}

.mobile {
  font-size: 30rpx;
}

.banka {
  width: 100%;
  /* margin-top: 20rpx; */
}

.banka image {
  width: 725rpx;
  margin-left: 12rpx;
}

.bulletincd {
  width: 645rpx;
  height: 70rpx;
  border: 1px solid #ff9914;
  border-radius: 35rpx;
  margin: 20rpx auto 0;
  position: relative;
}
.countdown{
  width: 163rpx;
  height: 30rpx;
  margin-top: 10rpx;
}
.time{
  font-family: Impact;
  font-size: 26rpx;
  color: #ff9914;
  font-style: italic;
  position: absolute;
  top: 40rpx;
  left: 86rpx;
}
.time_t{
  position: absolute;
  top: 25rpx;
