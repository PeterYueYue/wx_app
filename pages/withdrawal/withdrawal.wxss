.page {
  background: rgba(244, 244, 244, 1);
  width: 100%;
  height: 100%;
  position: relative;
}

/* info */

.bg {
  width: 716rpx;
  height: 320rpx;
  background: url('http://image.shishangbag.vip/upload/img/web/yy/member/bgwithdraw.png') no-repeat;
  background-size: 100% 100%;
  margin: 20rpx auto 0;
  text-align: center;
  overflow: hidden;
  padding-bottom: 20rpx;
}

.bg .h5 {
  font-size: 76rpx;
  color: rgba(255, 255, 255, 1);
  margin-top: 30rpx;
}

.bg .p1 {
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
  margin-top: 10rpx;
}

.bg .p2 {
  font-size: 22rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.bg .p3 {
  font-size: 18rpx;
  font-weight: 300;
  color: rgba(150, 255, 244, 1);
  line-height: 30rpx;
}

.under {
  width: 100%;
  min-height: calc(100vh - 340rpx) !important;
  background: #fff;
  box-shadow: -1rpx 4rpx 26rpx 1rpx rgba(8, 31, 88, 0.22);
  border-radius: 20px 20rpx 0 0;
  overflow: hidden;
}

.under .exchange {
  display: flex;
  align-items: center;
  margin: 57rpx 40rpx 0;
}

.exchange text:nth-child(1) {
  width: 6rpx;
  height: 32rpx;
  background: rgba(58, 165, 255, 1);
  border-radius: 3rpx;
  display: inline-block;
  margin-right: 15px;
}

.exchange text:nth-child(2) {
  font-size: 38rpx;
  color: rgba(0, 0, 0, 1);
  margin-right: 15px;
}

.exchange text:nth-child(3) {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}
.under .coin_input {
  display: block;
  width: 100%;
  height: 100rpx;
  font-size:72rpx;
  color:rgba(65,169,255,1);
  margin: 30rpx 40rpx;
  background-color:  #fff;
  border-bottom: 2rpx solid rgba(210,210,210,1);
  text-indent: 10rpx;
}

.p_calss {
  font-size:36rpx;
  color:#666;
}
.desc {
  font-size:24rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  margin: 20rpx 40rpx 50rpx;
  text-indent: 20rpx;
}

.withdraw-but {
  flex: 0.5;
  width: 112rpx;
  display: inline-block;
  vertical-align: top;
  font-size: 28rpx;
  color: #3AA5FF;
  margin-top: 20rpx;
}

/* 提现按钮 */

.defaultAdd {
  width: 100%;
  font-size: 30rpx;
  box-sizing: border-box;
  padding: 0 54rpx;
  color: #1A1A1A;
  font-weight: 600;
  margin-top: 50rpx;
  display: flex;
  align-items: center;
}

radio-group {
  display: flex;
  align-items: center;
}

.yhk {
  margin-left: 45rpx;
}

/* button */

#new-add {
  background: #3AA5FF;
  border-radius: 4px;
  color: #fff;
  font-size: 34rpx;
  margin: 240rpx 54rpx;
}

.gary {
  opacity: 0.5;
}

.fanxian {
  width: 350rpx;
