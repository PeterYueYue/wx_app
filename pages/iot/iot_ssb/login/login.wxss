.page{
  background-color: #F9F9F9;
  width: 100%;
  min-height: 100vh;
}
.head{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 50rpx;
  background-color: #fff;
  padding-bottom: 30rpx;
}
.progress{
  width: 532rpx;
  height: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.progress .line{
  width: 532rpx;
  height: 4rpx;
  background-color: #99D0FF;
}
.progress .point{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  left: -15rpx;
  top: 0;
}
.step_names{
  width: 600rpx;
  font-size: 30rpx;
  color: #999999;
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}
.content{
  padding: 30rpx;
}
.content .siteInfo{
  width: 100%;
  background-color: #fff;
  box-shadow: 0px 5rpx 13rpx 0px rgba(36, 36, 36, 0.08);
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx  50rpx;
  box-sizing: border-box;
}
.title_box{
  display: flex;
  align-items: center;
  font-size: 36rpx;
  color: #333333;
}
.title_box image{
  width: 24rpx;
  height: 30rpx;
  margin-right: 14rpx;
}
.info_list{
  display: flex;
  width: 100%;
  justify-content: space-between;
  align-items: center;
  margin-top: 60rpx;

}
.info_list .count{
  font-size: 36rpx;
  color: #3BA6FF;
}
.info_list .item{
  text-align: center;
  font-size: 22rpx;
  color: #333333;
}
.open_time{
  font-size: 22rpx;
  color: #666666;
  text-align: left;
  width: 100%;
  margin-top: 62rpx;
  margin-bottom: 8rpx;
}
.operating_area{
  display: flex;
  width: 100%;
  flex-direction: column;
  align-items: center;
}
.operating_area .title_box{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 64rpx;
  font-size: 30rpx;
  color: #252525;
}
.operating_area .title_box text{
  margin: 0 40rpx;
}
.operating_area .title_box image{
  width: 110rpx;
  height: 12rpx;
}
.main_box{
  width: 316rpx;
  height: 316rpx;
  margin-top: 30rpx;
  position: relative;
}
.main_box button{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
}
.main_box image{
  width: 100%;
  height: 100%;
}
.staff{
  width: 100%;
  height: 100rpx;
  background-color: #3AA5FF;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}
.binding_box{
  width: 560rpx;
  height: 600rpx;
  background-color: #fff;
  border-radius: 20rpx;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.binding_box image{
  width: 200rpx;
  height: 200rpx;
  margin-top: 107rpx;
}
.binding_box .title2{
  font-size: 22rpx;
  color: #333333;
  margin-top: 46rpx;
}
.binding_box button{
  width: 340rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  color: #fff;
  background-color: #3AA5FF;
  border-radius: 45rpx;
  margin-top: 70rpx;
}