.page {
  background-color: #fff;
}
.bag {
  width: 100%;
  text-align: center;
}
.bag image {
  width: 100%;
  margin-top: 18rpx;
}
.choose {
  display: flex;
  flex-wrap: nowrap;
  box-sizing: border-box;
  padding: 0 50rpx;
  align-items: center;
}

.bag-name {
  font-size: 36rpx;
  color: #1A1A1A;
  margin-top: 40rpx;
  line-height: 40rpx;
}
.bag-p {
  font-size: 26rpx;
  color: #999;
  line-height: 40rpx;
  margin-top: 10rpx;
}
.tianjia {
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 0 0 120rpx;
  font-size: 30rpx;
  color: #666;
}
.tianjia input {
  width: 80rpx;
  height: 52rpx;
  text-align: center;
  color: #000;
  padding: 0;
}
.tianjia image {
  width: 30rpx;
  vertical-align: middle;
}

.p3 {
  font-size: 40px;
  margin-top: 30rpx;
  color: #666;
  font-size: 26rpx;
  box-sizing: border-box;
  padding: 0 50rpx;
}

.p3 text:nth-child(1) {
  font-size: 40rpx;
  color: rgba(57, 166, 255, 1);
}
.p3 text:nth-child(2) {
  text-decoration: line-through;  
}
