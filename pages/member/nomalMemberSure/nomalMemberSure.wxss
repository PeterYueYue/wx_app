/* 收货地址 */
.address {
  margin: 40rpx 34rpx 0;
  background-color: rgb(251, 251, 251);
  height: 160rpx;
  display: flex;
  align-items: center;
}
.address image {
  width: 30rpx;
  margin: 0 25rpx;
}
.address view { 
  display: inline-block;
  width: 80%;
  font-size: 34rpx;
  color: #4D4D4D;
}
.address text {
  font-size: 40rpx;
  float: right;
  margin-right: 0;
}
.btn {
  width: 640rpx;
  margin: 120rpx auto 0;
}
.btn button {
  border-radius: 8rpx;
}


/* 选择地址后 */
.address1 {
  width: 681rpx;
  height: 160rpx;
  margin: 50rpx auto 0;
  background: rgba(250, 250, 250, 1);
  border-radius: 10rpx;
  display: flex;
  align-items: center;
}
.address1>view:nth-child(1) {
  width: 100rpx;
  text-align: center;
}
.address1>view:nth-child(2) {
  min-width: 500rpx;
}
.address1 image:nth-child(1) {
  width: 36rpx;
}

.address1 image:nth-child(2) {
  width: 26rpx;
  margin-right: 54rpx;
}

.word view:nth-child(1) {
  font-size: 32rpx;
  font-weight: bold;
  color: rgba(0, 0, 0, 1);
}
.nickname {
  margin-right: 42rpx;
}
.word view:nth-child(2) {
  font-size: 24rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  margin-top: 27rpx;
}
