.page {
  width: 100%;
  min-height: 100vh;
  background: #ffffff;
  box-sizing: border-box;
  padding-bottom: 56rpx;
  background: url('http://image.shishangbag.vip/upload/img/web/yy/member/helpbg.png') no-repeat;
  background-position: center center;
  background-attachment: fixed;
  background-size: cover;
  text-align: center;
}

.helpword {
  width: 574rpx;
  margin-top: 64rpx;
}

.content {
  width: 663rpx;
  /* height: 446rpx; */
  background: rgba(255, 255, 255, 1);
  box-shadow: 5rpx 5rpx 28rpx 1rpx rgba(0, 0, 0, 0.64);
  border-radius: 20rpx;
  position: relative;
  box-sizing: border-box;
  padding: 100rpx 99rpx;
  margin:  300rpx auto;
}

.content .head {
  width: 181rpx;
  height: 181rpx;
  border-radius: 50%;
  position: absolute;
  top: -90rpx;
  left: 50%;
  transform: translateX(-50%);
}

.content .title {
  font-size: 40rpx;
  font-weight: 600;
  color: rgba(54, 170, 255, 1);
}

.content .p1 {
  width: 470rpx;
  height: 202rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 48rpx;
  background: url('http://image.shishangbag.vip/upload/img/web/yy/member/helpmsg.png') no-repeat;
  background-size: 100% 100%;
  box-sizing: border-box;
  padding: 50rpx 0 0;
  margin-top: 9rpx;
}

.content button {
  width: 430rpx;
  height: 90rpx;
  background-image: linear-gradient(-9deg, rgba(54, 170, 255, 1), rgba(24, 214, 255, 1));
  border-radius: 45rpx;
  font-size: 34rpx;
  border: none;
  color: rgba(254, 254, 254, 1);
  position: absolute;
  bottom: -45rpx;
  left: 50%;
  transform: translateX(-50%);
}


/* 蒙版 */
.success_content {
  width: 610rpx;
  height: 540rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 20rpx;
  text-align: center;
}

.success_content .head {
  font-size: 38rpx;
  font-weight: 500;
  color: rgba(255, 105, 21, 1);
  line-height: 96rpx;
  margin-top: 20rpx;
}

.success_content image {
  width: 222rpx;
  margin: 20rpx 0;
}

.success_content .p1 {
  font-size: 32rpx;
  color: #333;
  line-height: 60rpx;
}

.success_content .p2 {
  font-size: 28rpx;
  color: #666;
  line-height: 60rpx;
}
/* 登录按钮 */
.success_content button {
  width:440rpx;
  height:88rpx;
  line-height: 88rpx;
  background:rgba(58,165,255,1);
  border-radius:44rpx;
  color: #fff;
  margin: 20rpx auto 0;
  font-size: 36rpx;
}
