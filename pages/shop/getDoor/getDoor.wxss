.page {
  width: 100%;
  min-height: 100vh;
  background: linear-gradient(2deg, rgba(43, 108, 255, 1), rgba(52, 158, 246, 1));
  box-sizing: border-box;
  padding-bottom: 50rpx;
}

.bg {
  width: 100%;
  display: block;
}

.new {
  width: 700rpx;
  min-height: 372rpx;
  background-color: #fff;
  background: #fff;
  border-radius: 20rpx;
  margin-top: -240rpx;
  overflow: hidden;
  box-sizing: border-box;
  padding: 37rpx 35rpx 66rpx 42rpx;
  display: inline-block;
  margin-left: 25rpx; 
}

.head {
  font-size: 34rpx;
  font-weight: 600;
  color: rgba(45, 118, 253, 1);
  text-align: center;
}

.flex {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.flex title {
  font-size: 32rpx;
  color: rgba(51, 51, 51, 1);
}

.flex .p1 {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  text-indent: 30rpx;
  margin-top: 20rpx;
}

.flex button {
  width: 140rpx;
  height: 54rpx;
  line-height: 54rpx;
  background: rgba(44, 116, 254, 1);
  border-radius: 27rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  position: relative;
}
.old {
  margin-top: 23rpx;
}
.lifestyle {
  width: 140rpx;
  height: 54rpx;
  line-height: 54rpx;
  background: rgba(44, 116, 254, 1);
  border-radius: 27rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
}