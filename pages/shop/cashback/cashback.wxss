.page {
  width: 100%;
  /* background-color: #f5f5f5; */
  box-sizing: border-box;
  padding-bottom: 50rpx;
}
.banner {
  width: 100%;
  position: relative;
}
.banner image {
  width: 100%;
}
.banner view {
  position: absolute;
  right: 0;
  top: 23rpx;
  width:90rpx;
  height:50rrpx;
  line-height: 50rpx;
  background:rgba(255,255,255,1);
  border-radius:25rpx 0px 0px 25rpx;
  font-size:28rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  text-indent: 24rpx;
}
.slogan {
  margin: 72rpx auto 0;
  width: 570rpx;
  display: block;
}
.desc {
  text-align: center;
  font-size:34rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  margin: 38rpx 0 51rpx
}
.desc text {
  font-size:44rpx;
  color: #FF7200;
}
.flex {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding: 0 0rpx 0 80rpx;
}
.box {
  position: relative;
  width: 176rpx;
  height: 176rpx;
  line-height: 176rpx;
  background:linear-gradient(-19deg,rgba(35,119,255,1), rgba(90,180,255,1));
  border-radius:20rpx;
  text-align: center;
  font-size:40rpx;
  font-weight:400;
  color:rgba(255,255,255,1);
  margin: 0 32rpx 27rpx 0;
}

.box view {
  position: absolute;
  left: 0;
  top: 0;
  width:77rpx;
  height:35rpx;
  line-height: 35rpx;
  background:linear-gradient(163deg,rgba(255,222,55,1),rgba(253,185,5,1));
  border-radius:20rpx 0 20rpx 0;
  text-align: center;
  font-size:18rpx;
  color:rgba(255,255,255,1);
}
.box image {
  width: 75rpx;
  height: 50rpx;
  position: absolute;
  right: 0;
  bottom: 0;
}
.box_new {
  background:rgba(246,248,250,1);
  color:#C7C9CB;
}
.box_new view {
  background:linear-gradient(163deg,#EBECEE,#EBECEE);
}

.btn {
  width:460rpx;
  height:96rpx;
  background:rgba(0,138,255,1);
  border-radius:48rpx;
  font-size:38rpx;
  color:rgba(254,254,254,1);
  margin: 50rpx auto 0;
}
.btn_gray {
  background-color: #EBECEE;
  color: #666666;
}
button::after{
  border: none;
}