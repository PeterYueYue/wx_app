.page {
  width: 100%;
  min-height: calc(100vh - 100rpx);
  background-color: #f5f5f5;
}

.tabs {
  width: 100%;
  height: 76rpx;
  display: flex;
  justify-content: space-around;
  font-size: 32rpx;
  color: #333;
  background-color: #fff;
}

.tabs>view {
  height: 100%;
  box-sizing: border-box;
  line-height: 76rpx;
  position: relative;
}

.tab_active {
  font-weight: 700;
}

swiper {
  height: calc(100vh - 104rpx) !important;
  box-sizing: border-box;
  padding-bottom: 100rpx;
}

.swiper-wrap {
  padding-bottom: 0rpx;
}

.tab_active:before {
  content: '';
  position: absolute;
  left: 0;
  bottom: 0;
  height: 4rpx;
  width: 100%;
  background-color: #3aa5ff;
}

swiper-item>scroll-view {
  padding-top: 28rpx;
  height: calc(100vh - 76rpx);
  background-color: #f5f5f5;
  border-radius: 10rpx;
}

swiper-item>scroll-view>view {
  padding-bottom: 150rpx;
}

.order {
  width:700rpx;
  border-radius:20rpx;
  margin: 0 auto 22rpx;
  box-sizing: border-box;
  padding: 30rpx 25rpx 0rpx 30rpx;
  background:rgba(255,255,255,1);
}
.flex {
  display: flex;
}
.flex .head {
  width: 220rpx;
  height: 220rpx;
  margin-right: 16rpx;
  border-radius: 20rpx;
}
.flex .coin {
  width: 22rpx;
  height: 22rpx;
}
.flex_right {
  width: 100%;
  position: relative;
}
.desc .title{
  width: 262rpx;
  font-size: 28rpx;
}
.p1 {
  font-size:28rpx;
  font-weight:400;
  color:rgba(153,153,153,1);
  margin-top: 6rpx;
}
.p1 image {
  margin-right: 8rpx;
}
.p1 text {
  float: right;
}
.desc text {
  font-size:30rpx;
  font-weight:400;
  color:rgba(52,163,255,1);
  position: absolute;
  right: 0;
  top: 0;
}

.total {
  text-align: right;
  font-size:28rpx;
  font-weight:400;
  margin: 10rpx 0 22rpx 0;
  color:rgba(51,51,51,1);
}
.btns {
  text-align: right;
  margin-top: 20rpx;
}
.btns button {
  width:170rpx;
  height:56rpx;
  background:rgba(255,255,255,1);
  border:1rpx solid rgba(191,191,191,1);
  border-radius:29rpx;
  display: inline-block;
  line-height: 56rpx;
  font-size:28rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  margin-left: 28rpx;
}
.btns .go_sure {
  color: #34A3FF;
  border: 1rpx solid #34A3FF;
}
.hint {
  height: calc(100vh - 404rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  font-weight:400;
  color:rgba(102,102,102,1);
  font-size: 28rpx;
}

.hint>image {
  width: 108rpx;
  margin-bottom: 34rpx;
}

.clear:after {
  display: block;
  clear: both;
  content: "";
  visibility: hidden;
  height: 0
}

.clear {
  zoom: 1
}

/* 电子券蒙版 */
.content {
  width: 600rpx;
  height: 800rpx;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
}
.couHead {
  background-color: #34A3FF;
  font-size: 34rpx;
  color: #FFFFFF;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.contentScroll {
  height: 680rpx;
  overflow-y: scroll;
  box-sizing: border-box;
  padding: 0 45rpx;
}
.coup {
  color: #333;
  font-size: 28rpx;
  margin-top: 40rpx;
  font-weight: 600;
}
.coup text:nth-child(1) {
  color: #666;
  display: inline-block;
  width: 320rpx;
  margin-left: 20rpx;
}
.coup text:nth-child(2) {
  display: inline-block;
  width: 83rpx;
  height: 36rpx;
  background: #34A3FF;
  border-radius: 18rpx;
  color: #fff;
  line-height: 36rpx;
  text-align: center;
  font-size: 23rpx;
  font-weight: 500;
}
.coupDesc {
  font-size: 24rpx;
  color: #666;
  margin-top: 25rpx;
  line-height: 34rpx;
}
.content image {
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  right: 30rpx;
  top: 30rpx;
}