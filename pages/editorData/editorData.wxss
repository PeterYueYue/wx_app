.page {
  width: 100%;
  height: 100vh;
  background-color: #fff;
  box-sizing: border-box;
  padding-top: 114rpx;
}

.head {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.head_box {
  position: relative;
}

.head_img {
  width: 190rpx;
  height: 190rpx;
  border-radius: 50%;
}

.head_bg {
  width: 61rpx;
  position: absolute;
  right: 0;
  bottom: 0;
}

.head_text {
  font-family: PingFangSC-Light;
  font-size: 26rpx;
  letter-spacing: 1rpx;
  color: #999;
  margin-top: 10rpx;
}

.editor {
  width: 534rpx;
  border-bottom: 1rpx solid #dcdcdc;
  display: flex;
  align-items: center;
  margin: 85rpx auto 0;
  box-sizing: border-box;
  padding: 10rpx 40rpx;
}

.editor_text {
  font-weight: 700;
  width: 160rpx;
  font-family: PingFangSC-Medium;
  font-size: 36rpx;
  color: #333;
}

.editor_input {
  font-family: PingFangSC-Regular;
  font-size: 34rpx;
  color: #333;
}

.btn {
  width: 548rpx;
  height: 100rpx;
  background-color: #3ea7ff;
  border-radius: 50rpx;
  font-family: PingFangSC-Medium;
  font-size: 38rpx;
  line-height: 100rpx;
  letter-spacing: 2rpx;
  color: #fff;
  text-align: center;
  margin: 185rpx auto 0;
  font-weight: 700;
}
