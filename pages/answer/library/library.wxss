
.page{
  padding: 38rpx 30rpx 100rpx 30rpx; 
  font-size: 28rpx;
  color: #333333;
  background: url("https://sbag-small.oss-cn-huhehaote.aliyuncs.com/upload/img/web/yy/answer/libBg.png") no-repeat;
  background-size: 100% 100%;
  height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}
.list{
  flex: 1;
  width: 690rpx;
  background-color: #fff;
  border-radius: 20rpx;
  overflow-y: scroll;
  padding-bottom: 50rpx;
}
.item{
  display: flex;
  padding: 40rpx 0;
  padding-left: 40rpx;
  box-sizing: border-box;
  border-bottom: 1px dashed #E5E5E5;
}
.item .title{
  font-size: 32rpx;
  color: #333333;
  line-height: 70rpx;

}
.item .line{
  width: 8rpx;
  height: 30rpx;
  border-radius: 4rpx;
  background-color: #3AA5FF;
  margin-top: 20rpx;
}
.item .right{
  margin-left: 26rpx;
  
}
.options{
  font-size: 24rpx;
  line-height: 50rpx;
  
}
.options .optItem{
  width: 530rpx;
  margin-right: 30rpx;
  word-wrap:break-word;
}

.active{
  color: #3AA5FF;
}

.dh{
  width: 10rpx;
  height: 20rpx;
  background-color:transparent;
  border-style: solid;
  border-color: #3AA5FF;
  border-width: 0 2px 2px 0;
  transform: rotate(40deg);
  margin-top: 8rpx;
  margin-left: 20rpx;
  display: inline-block;
}