.vouchers {
  width: 100%;
  height: 100vh;
  background: url("http://sbag-small.oss-cn-huhehaote.aliyuncs.com/upload/img/web/yy/vouchers/h5/bg3.png") no-repeat;
  background-size: 100% 100%;
  position: relative;
  text-align: center;
}

.bghead {
  margin-top: 20px;
}

.box1 {
  background-color: #fff;
  color: #35a3ff;
  width: 60%;
  height: 90rpx;
  border-radius: 90rpx;
  line-height: 90rpx;
  text-align: center;
  position: absolute;
  left: 20%;
  bottom: 200rpx;
  z-index: 100;
}

/* 蒙版 */

.success_content {
  width: 610rpx;
  height: 540rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 20rpx;
  text-align: center;
}

.success_content .head {
  font-size: 38rpx;
  font-weight: 500;
  color: rgba(255, 105, 21, 1);
  line-height: 96rpx;
  margin-top: 20rpx;
}

.success_content image {
  width: 222rpx;
  margin: 20rpx 0;
}

.success_content .p1 {
  font-size: 32rpx;
  color: #333;
  line-height: 60rpx;
}

.success_content .p2 {
  font-size: 28rpx;
  color: #666;
  line-height: 60rpx;
}
/* 登录按钮 */
.success_content button {
  width:440rpx;
  height:88rpx;
  line-height: 88rpx;
  background:rgba(58,165,255,1);
  border-radius:44rpx;
  color: #fff;
  margin-top: 20rpx;
  font-size: 36rpx;
}